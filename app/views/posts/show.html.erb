<!-- Page Content -->
<div class="container post-container">
 <div class="row">
      <%= image_tag @post.image %>
    <div class="col-md-12">
      <h1 class="page-header"><%= @post.title %></h1>
      <p><%= @post.body %></p>
    </div>
  </div>
    <div class="row">

  <div class="col-lg-12">
    <h3 class="page-header">Related Projects</h3>
  </div>
  <% @posts.each do |post| %>
    <div class="col-sm-3 col-xs-6">
      <%= link_to post_path(post) do %>
      <%= image_tag post.image, class: 'img-responsive portfolio-item' %>
  <% end %>
    </div>
  <% end %>
</div>
</div>