<div id="posts">
    <div class="container">
        <div class="row">
              <% if @posts.present? %>
                <% @posts.each do |post| %>
                <div class="col-sm-4">
                  <div class="posts-item">
                    <%= image_tag post.image, class: 'preview' %>
                    <div class="description">
                      <h2><%= post.title %></h2>
                      <%= link_to post_path(post) do %><button class="read-more">Read more</button><% end %>
                      <p>Created <%= post.created_at.strftime("%B %d, %Y") %> by <%= post.author.name %></p>
                    </div>
                  </div>
                </div>
              <% end %>
            <% else %>
            <p>There are no posts <%= params[:search] %>.</p>
          <% end %>
          <div class="clearfix"></div>
          <div class="text-center"><%= paginate @posts %></div>
        </div>
    </div>
</div>
<div class="scroll-top page-scroll hidden-sm hidden-xs hidden-lg hidden-md">
    <a class="btn btn-primary" href="#page-top">
        <i class="fa fa-chevron-up"></i>
    </a>
</div>